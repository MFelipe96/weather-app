<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/listOfCitiesFragment"
    android:id="@+id/weather_navigation">
        <fragment
            android:id="@+id/listOfCitiesFragment"
            android:name="com.example.feature_weather.list_of_cities.ListOfCitiesFragment"
            android:label="ListOfCitiesFragment"
            tools:layout="@layout/list_of_cities_fragment">
                <action
                    android:id="@+id/action_listOfCitiesFragment_to_cityDetailsFragment"
                    app:destination="@id/cityDetailsFragment"
                    app:enterAnim="@anim/nav_default_enter_anim"
                    app:exitAnim="@anim/nav_default_exit_anim"
                    app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                    app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        </fragment>
        <fragment
            android:id="@+id/cityDetailsFragment"
            android:name="com.example.feature_weather.city_details.CityDetailsFragment"
            android:label="CityDetailsFragment"
            tools:layout="@layout/fragment_city_details"/>
</navigation>